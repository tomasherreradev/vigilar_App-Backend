{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src", 
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types", "./src/types"],

  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"]
}